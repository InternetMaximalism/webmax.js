{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDirs": ["./src"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "types": ["@types/node"]
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*", "node_modules", "dist"]
}
